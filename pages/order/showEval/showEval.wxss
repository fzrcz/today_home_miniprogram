/* 评价 */
.head-main{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #f8f8f8;
}
.head{
  display: flex;
  width: 90%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
  font-weight: bold;
}
.score{
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.score-right{
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 65%;
  padding:0rpx 0rpx 0rpx 40rpx;
}
.textarea{
  position: relative;
  height: 300rpx;
  /* width: 90%; */
  border: 1rpx #e6e6e6 solid;
  margin:0rpx 40rpx 0rpx 40rpx;
  font-size: 32rpx;
  padding:20rpx;
}