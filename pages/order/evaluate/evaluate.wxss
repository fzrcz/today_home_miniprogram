/* pages/order/evaluate/evaluate.wxss */

page {
  background: #f2f2f2;
}
.top_box{
  background-color: #fff4c1;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  margin-bottom: 30rpx;
  color: #333;
}
.top_box image{
  height: 34rpx;
  width: 34rpx;
  margin: 0 16rpx 5rpx 40rpx;
  vertical-align: middle;
}
.evaluate-t {
  width: 88%;
  margin: 40rpx auto 40rpx;
  background: #fff;
  border-radius: 10rpx;
}

.evaluate-t-t {
  display: flex;
  align-items: flex-end;
  padding: 20rpx 0 40rpx;
}

.star-box {
  display: flex;
  margin: 20rpx auto 0;
}
.star-box view{
  margin-top: 10rpx;
  text-align: center;
}
.assess {
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin: 0 26rpx;
}

.evaluate-t-c {
  color: #bfbfbf;
  padding: 20rpx 40rpx;
}

.evaluate-t-c textarea {
  height: 140rpx;
  width: 100%;
  overflow-y: hidden;
  word-break: break-all;
  word-wrap: break-word;
}

.evaluate-t-c-p {
  padding: 40rpx 0 0 0;
}
.evaluate-t-c-p text{
  color: #ff7f27;
}
.evaluate-t-b {
  overflow: hidden;
  padding: 20rpx 8rpx 40rpx;
  margin: 0 34rpx;
  border-bottom: 2rpx solid#ccc;
}

.evaluate-t-b image {
  width: 130rpx;
  height: 130rpx;
}

.evaluate-b {
  width: 50%;
  background: #fff;
  height: 72rpx;
  border-radius: 72rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 72rpx;
}
button:after {
	border: 0;
}
.imgList{
  position: relative;
  /* border:  2rpx #bfbfbf dashed; */
  margin: 0 30rpx 30rpx 0;
  border-radius: 10rpx;
}
.imgList:nth-child(3n){
  margin: 0 0 30rpx 0;
}
.evaluate-t-b .remove_x{
  position: absolute;
  top: -20rpx;
  right: -24rpx;
  height: 38rpx;
  width: 38rpx;
}
.imgnumbers{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 10%;
  left: 29%;
}
.box-style1 {
  border: 2rpx solid #bfbfbf;
  padding: 0 30rpx;
  height: 50rpx;
  margin: 20rpx 0 0 36rpx;
  display: inline-block;
  border-radius: 6rpx;
  line-height: 50rpx;
  color: #888;
}
.shadow1 {
  border: 2rpx solid #ff7f27;
  color: #ff7f27;
  background-color: #ffeece;
}
.evaluate_title{
  font-size: 26rpx;
  padding-left: 40rpx;
  color: #666;
}
.checkbox-group {
  display: inline-block;
}