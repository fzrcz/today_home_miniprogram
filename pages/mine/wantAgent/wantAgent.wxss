.plaClass {
  color: #dbdbdb;
}

.container {
  padding: 0;
}

.container .head {
  height: 400rpx;
  background: linear-gradient(#ff7c50, #ff403e);
  position: relative;
}

.container .head text {
  color: #fff;
  font-size: 42rpx;
  position: absolute;
  top: 50%;
  left: 40rpx;
  transform: translateY(-50%);
}

.container .head image {
  width: 277rpx;
  height: 280rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}

.warp-content {
  margin-top: 50rpx;
}

.container {
  width: 100vw;
  font-size: 28rpx;
  min-height: 100vh;
  overflow: hidden;
  color: #6b8082;
  position: relative;
}

.container .title {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 4%;
  border-bottom: 1px solid #f5f5f5;
}

.container .buttonBox {
  width: 91%;
  margin: 0 auto;
  height: 84rpx;
  border-radius: 84rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background-color: #4a8be9;
}

.container .tri {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  right: 30rpx !important;
  border-top: 16rpx solid #545151;
}

.container .line {
  margin-top: 30rpx;
  height: 100rpx;
  width: 92%;
  margin: 0 auto;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
}

.container .line .lineRight {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.container .line .lineRight .tips {
  color: #9a9a9c;
  font-weight: bold;
}
.container .line .lineRight radio {
  transform: scale(0.8);
  margin-right: 6rpx;
}
.container .line .lineLeft {
  display: flex;
  width: 20%;
  align-items: center;
  height: 100%;
  font-weight: 400;
}

.container .line .input {
  padding-right: 20rpx;
  height: 100%;
  width: 70%;
  text-align: left;
  font-size: 28rpx;
  color: #545151;
}

.container .line .picker {
  height: 100%;
  justify-content: flex-start;
  display: flex;
  align-content: center;
  width: 500rpx;
}

.container .line picker {
  height: 84rpx;
  line-height: 84rpx;
}

.buttonBox {
  width: 91%;
  margin: 0 auto;
  height: 84rpx;
  border-radius: 84rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background-color: #4a8be9;
  font-size: 32rpx;
  letter-spacing: 1rpx;
}