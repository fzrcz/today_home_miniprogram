button::after {
  border: none;
}

/* 新增样式 */

page {
  background-color: #fff;
}

.account-balance {
  border-radius: 20rpx;
  z-index: 4;
  display: flex;
  justify-content: center;
}

.account {
  width: 100%;
  height: 208rpx;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

.account-money {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.show-real {
  width: 30rpx;
  height: 20rpx;
  margin: 0 0 0 20rpx;
}

.money-l {
  color: #fff;
  padding: 0 0 0 80rpx;
}

.money-r {
  background: #fff;
  color: #fe6c3d;
  border-radius: 70rpx 0 0 70rpx;
  height: 50rpx;
  padding: 0 40rpx 0 30rpx;
}

.icon-cash {
  width: 20rpx;
  height: 16rpx;
  margin: 0 20rpx 0 0;
}

/* 我的订单 */

.order-all {
  width: 86%;
  margin: 0 auto;
}

.order-t {
  padding: 20rpx 0 50rpx 0;
  color: #737373;
}

.order-b {
  /* padding: 0 30rpx 30rpx 30rpx; */
  padding: 0 0 30rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
}

.icon-list {
  text-align: center;
  position: relative;
  width: 25%;
}

.order-icon {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.round {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #fe0002;
  position: absolute;
  /* right: 5rpx; */
  right: 36rpx;
  top: -8rpx;
  font-size: 20rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.certification{
  display: inline-block;
  background: lightskyblue;
  color: #fff;
  font-weight: 500;
  margin-left: 14rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}
/* 工具类 */

.tools-all {
  width: 86%;
  margin: 0 auto;
}

.tools {
  /* padding: 30rpx 20rpx 0 20rpx; */
  padding: 30rpx 0 0 0;
}

.tools-list {
  text-align: center;
  padding: 0 0 20rpx 0;
  width: 25%;
}

.tools-icon {
  width: 50rpx;
  height: 48rpx;
  display: inline-block;
}

.logout {
  width: 70%;
  border: 2rpx solid #999;
  font-size: 36rpx;
  text-align: center;
  padding: 12rpx 0;
  border-radius: 100rpx;
  margin: 60rpx auto 0 auto;
}

.col-c-r {
  color: #ff0051;
}

.to-personal {
  position: absolute;
  right: 60rpx;
  top: 40rpx;
  font-size: 44rpx;
}

.new-list {
  position: relative;
}

.new-coupon {
  position: absolute;
  /* right: -5rpx; */
  right: 28rpx;
  top: -8rpx;
  width: 30rpx;
  height: 30rpx;
  background: #fe0002;
  color: #fff;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
