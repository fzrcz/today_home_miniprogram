/* pages/member/empower/empower.wxss */

page {
  background: #f2f2f2;
  height: 100%;
  display: flex;
  align-items: center;
}

.autho-login {
  margin: 0 auto;
  padding: 60rpx 0 0 0;
}

.autho-login button {
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

button::after {
  border: 0;
}

.agree {
  background: linear-gradient(to bottom, #ff8a00, #fc741e);
  color: #fff;
}

button.refuse {
  background: #fff;
  color: #ff8802;
  margin-top: 30rpx;
}

.empower-img1 {
  text-align: center;
}

.empower-img1 image {
  width: 300rpx;
  height: 300rpx;
  display: inline-block;
  /* border-radius: 50%; */
  margin: 30rpx 0 0 0;
}

.login-bg {
  width: 86%;
  margin: 0 auto;
  background: #fff;
  padding: 60rpx 0;
  border-radius: 30rpx;
  position: relative;
}

.logo-img {
  width: 282rpx;
  margin: -140rpx auto 0 auto;
  display: block;
}

.login-box {
  width: 100%;
}

.h-bar {
  text-align: center;
  color: #fc731f;
  padding: 60rpx 0 30rpx 0;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.text-list {
  text-align: center;
  color: #666;
  line-height: 42rpx;
}
