.choose-list {
  width: 150rpx;
  height: 50rpx;
  background: #efefef;
  border-radius: 4rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 0 0 0 20rpx;
}

.choose-list-on {
  padding: -2rpx;
  box-sizing: border-box;
  border: 2rpx solid #ff7200;
  color: #ff7200;
  background: #fff8f2;
  border-radius: 4rpx;
}

.common-list {
  padding: 30rpx 30rpx;
  border-radius: 6px;
  margin: 20rpx;
  background: #fff;
}

.picker {
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 30rpx;
  width: 68%;
  height: 80rpx;
  line-height: 80rpx;
  color: #9c9898;
}

.item-list {
  padding: 0 0 40rpx 0;
}
.remarks {
  width: 68%;
  height: 220rpx;
  border: 2rpx solid #ccc;
  margin: 0 0 0 20rpx;
  padding: 20rpx;
  border-radius: 4rpx;
}

.content {
  margin: 0 0 100rpx 0;
}

.no-coupon {
  color: #89898b;
  padding: 4% 0 0 0;
}

.color-red {
  color: #fff;
  background: #ff7200;
  padding: 0 10rpx;
}

.crowd-red {
  color: #ff7200;
  font-weight: 1000;
}

.crowd-green {
  color: #5eff00;
  font-weight: 1000;
}

.shopvoucher {
  width: 120rpx;
  height: 120rpx;
  margin: 30rpx auto;
  position: relative;
}
.shopvoucher>image{
  height: 100%;
  width: 100%;
}
.shopvoucher .imgclear{
