  display:inline-block; 
  margin:0;
  vertical-align: bottom;
}
.otheareas{
  width:240rpx;
  border:2rpx solid#ccc;
  font-size:24rpx;
  padding:2rpx 10rpx;
}
.areaunit{
  position: absolute;
