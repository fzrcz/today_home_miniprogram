  right: 20rpx;
}
/* 选择支付方式 */

.gree{
  background:#c9c8c7!important;
  pointer-events: none;
}

/* 选择支付方式 */
.modal-pay{
  z-index: 101;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  width: 100%;
  /* min-height: 350rpx; */
}

.modal-pay-490{
  min-height: 490rpx;
}
.modal-pay-350{
  min-height: 350rpx;
}
/* 遮罩 */

.mask {
  z-index: 100;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.65);
  position: fixed;
  bottom: 0;
}

.pay-group {
  padding: 40rpx;
}

.choose-payment {
  padding: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #eaeaea;
}

.pay-group-list {
  padding: 0 0 40rpx 0;
}

/* 未选中的 背景样式 */

radio .wx-radio-input {
  border-radius: 50%;
  width: 46rpx;
  height: 46rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-color: #ff7206;
  background: #ff7206;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 46rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 选择服务商家 */
.serbus-box {
  margin: 14rpx 0;
  height: 90rpx;
  background: #f7f7f7;
}

.serbusimg {
  vertical-align: middle;
  margin: 0 10rpx;
  height: 80rpx;
  width: 80rpx;
  float: left;
}

.serbusti {
  letter-spacing: 4rpx;
  float: left;
  color: #a9a9a9;
  margin: 22rpx 0;
  font-size: 32rpx;
  font-weight: 700;
  text-overflow:ellipsis;
}

.serbus-right {
  line-height: 54rpx;
  width: 250rpx;
  height: 54rpx;
  margin-top: 18rpx;
  margin-right: 26rpx;
  float: right;
  background: #acacac;
  color: #fff;
  border-radius: 10rpx;
}

.serbusgap {
  font-size: 26rpx;
  float: left;
  margin: 0 16rpx;
}

.serbuscheck {
  background: #fef5ee;
  border: 2rpx solid#ffe0bf;
  height: 86rpx;
}
.serbuscheck .serbusimg{
  margin-left: 8rpx
}
.serbuscheck .serbusti {
  color: #ff7f03;
}

.serbuscheck .serbus-right {
  background: #ff7f03;
  margin-right: 24rpx;
}
