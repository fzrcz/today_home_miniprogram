.calendar {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    margin: 10rpx auto;
    box-sizing: border-box;
}
.jtou{
  height:30rpx;
  width:30rpx;
  margin-top: 12rpx;
}
/* 标题 */

.calendar-title {
    line-height: 70rpx;
    font-size: 30rpx;
    text-align: left;
    padding: 18rpx 20rpx;
    box-sizing: border-box;
}

.calendar-title .ctrl {
    display: inline-block;
    padding: 0 20rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
}

.calendar-title .item {
    display: inline-block;
    vertical-align: middle;
    line-height: 50rpx;
}

.calendar-title .title {
    min-width: 300rpx;
    text-align: center;
}

.calendar-title .today {
    float: right;
    margin-top: 10rpx;
}

/* 星期 */

.calendar-week {
    display: flex;
    text-align: center;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #e0e0e0;
    border-bottom: 1rpx solid #e0e0e0;
    background: #f5f5f5;
}

.calendar-week .item {
    flex: 1;
}

/* 日期 */

.calendar-container {
    display: flex;
    flex-wrap: wrap;
    padding: 30rpx 10rpx;
    box-sizing: border-box;
}

.calendar-container .grid {
    display: inline-block;
    width: 14.28571428571429%;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
}
.calendar-x .grid .self,
.calendar-container .grid .self {
    font-size: 22rpx;
    position: absolute;
    top: -6rpx;
    right: -4rpx;
    width: 36rpx;
    height: 36rpx;
    line-height: 34rpx;
    text-align: center;
    border-radius: 50%;
    color: red;
}
.calendar-x .grid .self1,
.calendar-container .grid .self1 {
    font-size: 20rpx;
    position: absolute;
    top: -6rpx;
    right: -4rpx;
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    border-radius: 50%;
    color: #fff;
    background: red;
}
.gray {
    color: #ccc;
}
.gray1 {
    color: #999;
}
.select {
    background: #ff7f27;
    color: #fff;
    margin: 0 auto;
    border-radius: 50%;
    width: 70rpx;

}
/* 滚动展示 */

.calendar-x {
    white-space: nowrap;
    padding: 20rpx 0;
    height: 110rpx;
}

.calendar-x .grid {
    display: inline-block;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
    width: 70rpx;
    text-align: center;
    background: #f5f5f5;
    border-radius: 10rpx;
    margin-left: 20rpx;
}
.calendar-x .grid:last-child{
    margin-right: 20rpx;
}

.calendar-x .grid.gray {
    color: #ccc;
}

