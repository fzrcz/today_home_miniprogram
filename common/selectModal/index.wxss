.tip-modal {
  z-index: 99;
  /* height: 558rpx; *//* width: 100%; *//* background-color: #fff; */
  position: fixed;
  width: 80%;
  border-radius: 10rpx;
  color: #333;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 252rpx;
  background-color: #fff;
}

.tip-mask {
  z-index: 98;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.65);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  transition: all .3s linear;
}

.tip-img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 80rpx;
  top: 52rpx;
  z-index: -1;
}
.tip-button {
  display: block;
  width: 184rpx;
  margin-left: auto;
  margin-right: auto;
  padding: 8rpx 24rpx;
  box-sizing: border-box;
  font-weight: 700;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  text-align: center;
  text-decoration: none;
  color: #fff;
  line-height: 1.41176471;
  border-radius: 4rpx;
  overflow: hidden;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  /* background-color: #07c160; */
  background-color: #ff7f27;
  margin-top: 50rpx;
}
.picker {
  text-align: center;
  margin:20rpx 0;
  margin-top: 50rpx;
}